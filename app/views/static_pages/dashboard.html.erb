      <div class="row">
      <div class="col-6">
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-secondary btn-block" %>
      </div>
      <div class="col-6">
        <%= link_to "Account settings", edit_user_registration_path, class: "btn btn-primary btn-block" %>
      </div>
      <div class="col-6">
        <%= link_to "Edit Personal Information", edit_user_info_path(id: current_user.id), class: "btn btn-primary btn-block" %>
      </div>
      <div class="col-6">
        <%=  link_to "List of PINUSians", users_path, class: "btn btn-warning btn-block" %>
      </div>
      </div>
    </div>
  </div>
