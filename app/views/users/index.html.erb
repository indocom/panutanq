<h3>Your Account</h3>
<p>
Full Name: <%= User.find(session["warden.user.user.key"][0][0]).fullname %></td>
</p>
<p>
Email: <%= User.find(session["warden.user.user.key"][0][0]).email %></td>
</p>

<h3>Other Accounts</h3>

<table>
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>Position</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    	<% if user != current_user %>
      		<tr>
        		<td><%= user.fullname %></td>
        		<td><%= user.email %></td>
        		<td>To be implemented</td>
        		<td><%= link_to 'Edit User' %></td>
	        	<td><%= link_to 'Delete', user_path(id: user.id), data: { 	confirm: "Are you sure?" }, method: :delete %></td>
      		</tr>
      	<% end %>
    <% end %>
  </tbody>
</table>
