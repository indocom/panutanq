<form>

  <%= nested_form_for @event do |f| %>
    <div class="form-group row">
      <div class="col-sm-3">
        <%= f.label :category_id %>
      </div>
      <div class="col-sm-9">
        <%= f.select :category_id, Category.all.pluck(:name, :id) %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-3 col-xs-12">
        <%= f.label :name %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-3 col-xs-12">
        <%= f.label :description %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :description %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-3 col-xs-12">
        <%= f.label :start_time %>
      </div>
      <div class="col-sm-9">
        <%= f.date_select :start_time %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-3 col-xs-12">
        <%= f.label :end_time %>
      </div>
      <div class="col-sm-9">
        <%= f.date_select :end_time %>
      </div>
    </div>
      <div class="form-group">
        <%= f.fields_for :pictures do |picture_form| %>
          <%= picture_form.file_field :picture %>
          <%= picture_form.link_to_remove "Remove" %>
        <% end %>
        <p><%= f.link_to_add "Add more picture", :pictures %></p>
      </div>

      </div>
    </div>
    <div class="form-group row">
      <%= f.submit 'Create' %>
    </div>
  <% end %>

</form>
