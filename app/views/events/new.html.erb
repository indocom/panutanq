<%= nested_form_for @event do |f| %>

    <div class="form-group row">
      <div class="col-sm-3 offset-md-2">
        <%= f.label :category_id %>
      </div>
        <%= f.select :category_id, Category.all.pluck(:name, :id) %>
    </div>

    <div class="form-group row">
      <div class="col-sm-8 offset-md-2">
        <%= f.label :title %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-8 offset-md-2">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', rows: '15' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-3 offset-md-2">
        <%= f.label :start_time %>
      </div>
      <%= f.date_select :start_time %>
    </div>

    <div class="form-group row">
      <div class="col-sm-3 offset-md-2">
        <%= f.label :end_time %>
      </div>
      <%= f.date_select :end_time %>
    </div>

    <div class="form-group row">
      <%= f.fields_for :pictures do |picture_form| %>
        <%= picture_form.file_field :picture %>
        <%= picture_form.link_to_remove "Remove this picture" %>
      <% end %>
      <div class="col-sm-3 offset-md-2">
        <%= f.link_to_add "Add more pictures", :pictures %></p>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-8 offset-md-2">
        <%= f.submit 'Create', class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    </div>
  <% end %>
