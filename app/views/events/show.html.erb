<div class="container">

  <div class="row">
    <div class="col-3">
      <h3>Events</h3>
      <ul class="list-unstyled">
        <% @events.each do |event| %>
          <li><%= link_to event.name, show_event_path(event.id) %></li>
        <% end %>
      </ul>
    </div>

    <div class="col-9">
      <h1><%= @event.name %></h1>

      <div class="event-time text-muted">
        <%= @event.start_time %>
        to
        <%= @event.end_time %>
      </div>
      <div class="event-description">
        <%= @event.description %>
      </div>
    </div>
  </div>

</div>
