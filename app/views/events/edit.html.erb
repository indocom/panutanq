<%= nested_form_for @event do |f| %>

  <div class="form-group row">
    <div class="col-sm-3 offset-md-2">
      <%= f.label :category_id %>
    </div>
    <%= f.select :category_id, Category.pluck(:name, :id) %>
  </div>

  <div class="form-group row">
    <div class="col-sm-8 offset-md-2">
      <%= f.label :title %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-8 offset-md-2">
      <%= f.label :description %>
      <%= f.cktext_area :description, ckeditor: {language: 'en'}, class: 'form-control', rows: '15' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3 offset-md-2">
      <%= f.label :start_time %>
    </div>
    <%= f.date_select :start_time %>
  </div>

  <div class="form-group row">
    <div class="col-sm-3 offset-md-2">
      <%= f.label :end_time %>
    </div>
    <%= f.date_select :end_time %>
  </div>

  <div class="form-group row">
    <div class="col-sm-2 offset-md-2">
      <%= f.submit 'Edit Event', class: 'btn btn-primary btn-lg' %>
    </div>
    <div class="col">
      <%= link_to "Delete Event", @event, method: :delete, data: { confirm: "Are you sure? This event will be deleted permanently." }, class: "btn btn-danger btn-lg" %>
    </div>
  </div>
<% end %>
