<%= nested_form_for @freshman do |f| %>

  <div class="form-group row">
    <div class="col-sm-8 offset-md-2">
      <%= f.label :title %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-8 offset-md-2">
      <%= f.label :pagename %>
      <%= f.text_field :pagename, class: 'form-control' %>
      <p>i.e. If set to admission, this will be shown as
        <i><u>pinusonline.com/freshmen/admission</u></i></p>
      <p>n.b. Must be unique and not null</p>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-8 offset-md-2">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', rows: '15' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-8 offset-md-2">
      <%= f.submit 'Save', class: 'btn btn-primary' %>
      <%= link_to "Delete", @freshman, method: :delete, data: { confirm: "Are you sure? This will be deleted permanently." }, class: "btn btn-warning" %>
      <%= link_to "Back", freshman_path(pagename: @freshman.pagename), class: "btn btn-danger" %>
    </div>
  </div>
<% end %>
